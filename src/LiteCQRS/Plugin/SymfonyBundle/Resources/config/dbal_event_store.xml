<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="litecqrs.doctrine.table_event_store.class">LiteCQRS\Plugin\Doctrine\EventStore\TableEventStore</parameter>
        <parameter key="litecqrs.doctrine.event_store_handler_factory.class">LiteCQRS\EventStore\EventStoreHandlerFactory</parameter>
    </parameters>

    <services>
        <service id="litecqrs.doctrine.event_store" class="%litecqrs.doctrine.table_event_store.class%">
            <argument type="service" id="doctrine.dbal.default_connection" />
            <argument type="service" id="litecqrs.serializer" />
        </service>

        <service id="litecqrs.doctrine.event_store_handler_factory" class="%litecqrs.doctrine.event_store_handler_factory.class%">
            <argument type="service" id="litecqrs.doctrine.event_store" />
            <argument type="service" id="litecqrs.identity_map" />

            <tag name="lite_cqrs.event_handler_factory" priority="200" />
        </service>
    </services>
</container>
